{
  "name": "novel2manga-mastra",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "vitest",
    "test:unit": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:integration": "dotenv -e .env.test -- vitest --config vitest.integration.config.ts",
    "test:integration:run": "dotenv -e .env.test -- vitest run --config vitest.integration.config.ts",
    "test:integration:watch": "dotenv -e .env.test -- vitest --config vitest.integration.config.ts",
    "test:full-flow": "bash ./scripts/run-integration-test.sh",
    "test:full-flow:win": "scripts\\run-integration-test.bat",
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start",
    "preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
    "deploy": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "format:json": "prettier --write \"**/*.{json,jsonc}\"",
    "format:json:check": "prettier --check \"**/*.{json,jsonc}\"",
    "lint": "biome lint --write .",
    "lint:check": "biome lint .",
    "check": "biome check --write .",
    "check:ci": "biome check .",
    "typecheck": "tsc --noEmit",
    "generate:openapi": "node --loader ts-node/esm ./scripts/generate-openapi.ts",
    "test:e2e": "playwright test",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "codemod:http-error:dry": "jscodeshift -d -p --extensions=ts,tsx --parser=tsx -t scripts/codemods/convert-http-error-to-api-error.js --ignore-pattern src/utils/api-error.ts --ignore-pattern src/__tests__ src",
    "codemod:http-error": "jscodeshift --extensions=ts,tsx --parser=tsx -t scripts/codemods/convert-http-error-to-api-error.js --ignore-pattern src/utils/api-error.ts --ignore-pattern src/__tests__ src",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "type": "module",
  "repository": "https://github.com/matsuvrprojects/novel2manga-mastra",
  "engines": {
    "node": ">=20.9.0"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.0",
    "@ai-sdk/google": "^1.2.22",
    "@ai-sdk/groq": "^1.2.9",
    "@ai-sdk/openai": "^1.3.23",
    "@ai-sdk/openai-compatible": "^1.0.0",
    "@mastra/core": "^0.11.1",
    "@mastra/libsql": "^0.11.2",
    "@mastra/memory": "^0.11.5",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/js-yaml": "^4.0.9",
    "@types/pdfkit": "^0.17.2",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "autoprefixer": "^10.4.21",
    "better-sqlite3": "^12.2.0",
    "canvas": "^3.1.2",
    "date-fns": "^4.1.0",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.4",
    "js-yaml": "^4.1.0",
    "jszip": "^3.10.1",
    "next": "15.3.3",
    "pdfkit": "^0.17.1",
    "postcss": "^8.5.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "tailwindcss": "^4.1.11",
    "yaml": "^2.8.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@asteasolutions/zod-to-openapi": "^1.3.0",
    "@biomejs/biome": "2.1.2",
    "@cloudflare/workers-types": "^4.20250726.0",
    "@opennextjs/cloudflare": "^1.6.1",
    "@playwright/test": "^1.44.0",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.2.0",
    "@types/sqlite3": "^3.1.11",
    "@vitejs/plugin-react": "^4.7.0",
    "dotenv-cli": "^7.4.3",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.4.4",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "jscodeshift": "^0.14.0",
    "lint-staged": "^15.5.2",
    "node-fetch": "^3.3.2",
    "playwright": "^1.44.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "wrangler": "^4.26.0"
  },
  "lint-staged": {
    "biome.json": [
      "biome format --write"
    ],
    "**/*.{ts,tsx,js,jsx}": [
      "biome check --write --no-errors-on-unmatched"
    ],
    "**/*.{json,jsonc,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
