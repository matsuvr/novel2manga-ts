{
  "compilerOptions": {
    // インクリメンタルビルドの最適化
    "incremental": false, // 一時的にfalseに設定
    "tsBuildInfoFile": ".tsbuildinfo", // .next外に配置
    // 型チェックのパフォーマンス改善
    "skipLibCheck": true,
    "disableSourceOfProjectReferenceRedirect": true,
    "target": "es2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
  "strict": true,
    "noEmit": true,
    "module": "esnext",
    "esModuleInterop": true,
    // Use bundler-style resolution to align with Next.js 15 and modern ESM packages
    "moduleResolution": "bundler",
    // Resolve path aliases like '@/...'
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@test/*": ["src/__tests__/*"]
    },
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "workers",
    ".next",
    "dist",
    "build",
    "coverage",
    "tmp_test",
    "vitest.setup.ts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/__tests__/**/*",
    "**/test/**/*",
    "**/src/test/**/*",
    "**/tests/**/*",
    "**/AppData/Local/Temp/**/*",
    "C:/Users/*/AppData/Local/Temp/**/*"
  ]
}
