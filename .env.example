# ================================================
# API Keys and Secrets Only
# 他の設定はすべて src/config/app.config.ts で行ってください
# ================================================

# LLM API Keys
OPENAI_API_KEY=your-openai-api-key-here
CLAUDE_API_KEY=your-claude-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here  # ClaudeのAPIキーの別名
GEMINI_API_KEY=your-gemini-api-key-here
GOOGLE_API_KEY=your-google-api-key-here  # GeminiのAPIキーの別名
GROQ_API_KEY=your-groq-api-key-here
OPENROUTER_API_KEY=your-openrouter-api-key-here

# ================================================
# Authentication Configuration (NextAuth v5)
# ================================================

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-here

# Google OAuth Provider
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Development Authentication Bypass (NEVER set to true in production)
ALLOW_ADMIN_BYPASS=false

# ================================================
# Email Service Configuration (SMTP)
# ================================================

# SMTP Server Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email Settings
MAIL_FROM="Novel2Manga <noreply@novel2manga.com>"
MAIL_REPLY_TO=support@novel2manga.com

# Email Feature Flags
EMAIL_ENABLED=true
EMAIL_DEBUG=false

# ================================================
# Background Job Worker Configuration
# ================================================

# Worker Process Settings
WORKER_TICK_MS=5000
WORKER_MAX_RETRIES=3
WORKER_BATCH_SIZE=1
WORKER_TIMEOUT_MS=300000

# Worker Features
WORKER_ENABLE_NOTIFICATIONS=true
WORKER_ENABLE_CLEANUP=true
WORKER_LOG_LEVEL=info

# Process Management
PM2_INSTANCES=1
PM2_MAX_MEMORY_RESTART=500M


# ================================================
# Environment and Database Configuration
# ================================================

# Environment
NODE_ENV=development

# Database Configuration
DATABASE_URL=file:./database/novel2manga.db
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30000

# Security Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000
SESSION_MAX_AGE=2592000
CSRF_SECRET=your-csrf-secret-here

# Application URLs
NEXT_PUBLIC_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# 開発時のDBマイグレーションをスキップして起動を高速化したい場合は有効化
# DB_SKIP_MIGRATE=1

# 認証関連の軽量メトリクスログを有効化（auth(), /api/auth/* の処理時間/ステータス）
# AUTH_METRICS=1

# ================================================
# 以下の設定は src/config/app.config.ts で行ってください：
# - LLMプロバイダーの選択
# - モデルの選択
# - チャンクサイズ
# - 並列処理数
# - キャッシュ設定
# - その他すべてのアプリケーション設定
# ================================================

# ================================================
# AI Provider API Keys - LLM設定（app.config.tsでプロバイダーごとに上書き可能）
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
GOOGLE_GENERATIVE_AI_API_KEY=...
GROQ_API_KEY=gsk_...
OPENROUTER_API_KEY=sk-or-...

# Environment Variable Overrides for app.config.ts
# 環境変数でapp.config.tsの設定を上書きできます
# ================================================

# LLMプロバイダーのオーバーライド
# APP_LLM_DEFAULT_PROVIDER=claude

# チャンク設定のオーバーライド
# APP_CHUNKS_DEFAULT_SIZE=7000
# APP_CHUNKS_DEFAULT_OVERLAP=700

# 処理設定のオーバーライド
# APP_PROCESSING_MAX_CONCURRENT=3

# フィーチャーフラグのオーバーライド
# APP_ENABLE_CACHING=true
# APP_ENABLE_COVERAGE_CHECK=true

# ログレベルのオーバーライド
# APP_LOG_LEVEL=debug
