{
  "editor.defaultFormatter": "biomejs.biome",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "quickfix.biome": "explicit",
    "source.organizeImports.biome": "explicit"
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  },

  // TypeScript設定
  "typescript.preferences.detectTypeScriptAliases": true,
  "typescript.suggest.autoImports": true,
  "typescript.preferences.includePackageJsonAutoImports": "auto",
  "typescript.updateImportsOnFileMove.enabled": "always",

  // TypeScript除外設定（一時ファイルを除外）
  "typescript.exclude": [
    "**/node_modules/**",
    "**/.next/**",
    "**/dist/**",
    "**/build/**",
    "**/coverage/**",
    "**/test/**",
    "**/tests/**",
    "**/__tests__/**",
    "**/*.test.*",
    "**/*.spec.*",
    "**/AppData/Local/Temp/**",
    "C:/Users/*/AppData/Local/Temp/**"
  ],

  // ファイル除外設定（エクスプローラーとウォッチャー）
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.next": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/coverage": true,
    "**/.turbo": true,
    "**/.vercel": true
  },

  // 検索除外設定
  "search.exclude": {
    "**/.next": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/coverage": true,
    "**/.turbo": true,
    "**/.vercel": true,
    "**/test": true,
    "**/tests": true,
    "**/__tests__": true,
    "**/*.test.*": true,
    "**/*.spec.*": true,
    "**/AppData/Local/Temp/**": true,
    "C:/Users/*/AppData/Local/Temp/**": true
  },

  // ウォッチャー除外設定
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/.next/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/coverage/**": true,
    "**/.turbo/**": true,
    "**/.vercel/**": true,
    "**/AppData/Local/Temp/**": true,
    "C:/Users/*/AppData/Local/Temp/**": true
  },

  // Biome診断設定
  "biome.enable": true,

  // TypeScript Language Server設定
  "typescript.disableAutomaticTypeAcquisition": false,
  "typescript.preferences.includeProjectWidePath": false,

  // 問題レポート除外設定
  "problems.decorations.enabled": true,
  "problems.showCurrentInStatus": true
}
